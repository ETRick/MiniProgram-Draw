/* pages/share/index.wxss */

page {
  height: 100%;
}

.container {
  width: 94%;
  margin: 0 3% 0 3%;
  height: 100%;
}

.container .content {
  width: 100%;
  height: 90%;
  background: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.container .content .title {
  width: 80%;
  height: 25%;
  font-size: 2.5em;
}

.container .content image {
  width: 90%;
  height: 50%;
  /* background: yellow; */
}

.container .content .btn-share {
  color: white;
  width: 80%;
  background: #8618b2;
}

.container .content .btn-save {
  color: white;
  width: 60%;
  background: #fe3f80;
}

.container .foot{
  width: 100%;
  height: 10%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}

.container .foot text{
  padding-bottom: 20rpx;
}
