/* components/customToggle/index.wxss */

.btn-container {
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.btn-container .icon{
  width: 50rpx;
  height: 50rpx;
  z-index: 3;
}

.btn-container .text{
  z-index: 3;
}

.btn-container .btn-bg{
  z-index: 1;
  opacity: 0;
  position: absolute;
  height: 100%;
  background: gray;
  border-radius: 20rpx;
  animation: bgShow 0.2s linear 1;
}

/* animation */
@keyframes bgShow{
  from, to{
    opacity: 0
  }

  50%{
    opacity: 0.5
  }
}